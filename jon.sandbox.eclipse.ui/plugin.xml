<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="jon.sandbox.eclipse.ui.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="jon.sandbox.eclipse.ui.Perspective"
            id="jon.sandbox.eclipse.ui.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Person"
            class="jon.sandbox.eclipse.ui.view.PersonView"
            id="jon.sandbox.eclipse.ui.view.person">
      </view>
      <view
            class="jon.sandbox.eclipse.ui.view.VirtualView"
            id="jon.sandbox.eclipse.ui.view.virtual"
            name="Virtual"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="jon.sandbox.eclipse.ui.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="jon.sandbox.eclipse.ui.command.create_person"
            name="Create Person">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="jon.sandbox.eclipse.ui.handler.CreatePersonHandler"
            commandId="jon.sandbox.eclipse.ui.command.create_person">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:jon.sandbox.eclipse.ui.view.person">
         <command
               commandId="jon.sandbox.eclipse.ui.command.create_person"
               icon="icons/new.png"
               label="Create Person"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:jon.sandbox.eclipse.ui.view.person">
         <command
               commandId="jon.sandbox.eclipse.ui.command.create_person"
               icon="icons/new.png"
               label="Create Person"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="jon.sandbox.eclipse.ui.application"
            name="RCP Application">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
      </product>
   </extension>

</plugin>
